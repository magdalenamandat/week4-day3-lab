<form method="post" action="/pizza-orders/<%= @order.id %>">
<label for="first-name">First Name:</label>
<input id="first_name" type="text" name="first_name" value="<%=@order.first_name  %>"/>

<label for="last-name">Last Name:</label>
<input id="last_name" type="text" name="last_name" value="<%=@order.last_name %>"/>

<label for="pizza-select">Select a pizza:</label>
<select id="pizza_select" name="topping">
  <option value="Margherita">Margherita</option>
  <option value="Italian Sausage">Italian Sausage</option>
</select>

<label for="quantity">Quantity:</label>
<input id="quantity" type="number" name="quantity" value="<%=@order.quantity  %>"/>

<input type="submit" value="Update Pizza Order"/>

</form>
